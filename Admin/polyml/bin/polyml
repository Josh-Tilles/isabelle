#!/bin/sh -x
#
# Poly/ML wrapper script


## self references

if [ -h "$0" ]; then
  THIS="`cd "\`dirname "$0"\`"; cd "\`dirname "\\\`find "$PRG" -ls | cut -d ">" -f 2\\\`"\`"; pwd`"
else
  THIS="`cd "\`dirname "$0"\`"; pwd`"
fi

SUPER="`cd "$THIS/.."; pwd`"


## run poly

PLATFORM=`"$THIS/polyml-platform"`
exec "$SUPER/$PLATFORM/poly" $*
