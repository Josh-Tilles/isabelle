#!/bin/sh
#
# platform independent Poly/ML wrapper script


## self references

PRG="`basename "$0"`"

if [ -h "$0" ]; then
  THIS="`cd "\`dirname "$0"\`"; cd "\`dirname "\\\`ls -l "$PRG" | sed -e 's/^.* -> //'\\\`"\`"; pwd`"
else
  THIS="`cd "\`dirname "$0"\`"; pwd`"
fi

SUPER="`cd "$THIS/.."; pwd`"


## run poly

PLATFORM=`"$THIS/polyml-platform"`
exec "$SUPER/$PLATFORM/poly" $*
