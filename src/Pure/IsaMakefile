  ML-Systems/polyml.ML ML-Systems/poplogml.ML ML-Systems/proper_int.ML	\
  ML-Systems/smlnj.ML ML-Systems/system_shell.ML			\
  ML-Systems/time_limit.ML ML-Systems/universal.ML
	@./mk -r


## clean

clean:
	@rm -f $(OUT)/Pure$(ML_SUFFIX) $(LOG)/Pure.gz $(LOG)/Pure-ProofGeneral.gz \
          $(OUT)/RAW $(LOG)/RAW.gz
