## special targets

Pure-copied:
	@./mk -C

RAW:
	@./mk -r

RAW-copied:
	@./mk -Cr


## clean

clean:
	@rm -f $(OUT)/Pure $(LOG)/Pure.gz $(OUT)/RAW $(LOG)/RAW.gz
