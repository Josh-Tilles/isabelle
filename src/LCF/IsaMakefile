# IsaMakefile for LCF
#

OUT = $(ISABELLE_OUTPUT)
FILES =	ROOT.ML LCF.thy LCF.ML simpdata.ML pair.ML fix.ML

$(OUT)/LCF: $(OUT)/FOL $(FILES)
	@$(ISATOOL) usedir -b $(OUT)/FOL LCF

$(OUT)/FOL:
	@cd ../FOL; $(ISATOOL) make

test: ex/ROOT.ML ex/ex.ML $(OUT)/LCF
	@$(ISATOOL) usedir $(OUT)/LCF ex

.PRECIOUS: $(OUT)/FOL $(OUT)/LCF
