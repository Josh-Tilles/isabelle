# Poly/ML 3.1
ML_SYSTEM=polyml-3.1
ML_HOME=/usr/local/ldist/DIR/polyml-3.1/polyml/sunos5.4
ML_OPTIONS="-h 30000"
LM_LICENSE_FILE=$ML_HOME/license.dat

